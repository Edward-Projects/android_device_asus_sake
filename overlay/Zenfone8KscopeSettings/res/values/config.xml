<resources>

    <!-- Whether to show min refresh rate in display settings -->
    <bool name="config_show_min_refresh_rate_switch">true</bool>

    <!-- Whether to show battery health -->
    <bool name="config_show_battery_health">true</bool>

    <!-- Define battery design capacity node -->
    <string name="config_battery_capacity_design">/sys/class/power_supply/battery/charge_full_design</string>

    <!-- Define battery now capacity node -->
    <string name="config_battery_capacity_now">/sys/class/power_supply/battery/charge_full</string>

    <!-- Define battery charge cycle node -->
    <string name="config_battery_charge_cycle">/sys/class/power_supply/battery/cycle_count</string>

</resources>
